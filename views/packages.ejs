<script>
    function loadme(){
        if("<%= details.plan.webPortal %>"=="YES"){
           document.getElementById('HeadderPanel').style.display='block'; 
           document.getElementById('lockedpanel').style.display='none';        
        }else{
           document.getElementById('HeadderPanel').style.display='none'; 
            document.getElementById('lockedpanel').style.display='block'; 
        }
    }

    if("<%= details.user.plan_id %>" == "1"){
        document.getElementById('basic_btn').setAttribute('disabled', false);       
        document.getElementById('pro_btn').setAttribute('disabled', false);           
    }else if("<%= details.user.plan_id %>" == "2"){
        document.getElementById('basic_btn').setAttribute('disabled', true);   
        document.getElementById('basic_btn').innerHTML ='Current Plan';    
    }else if("<%= details.user.plan_id %>" == "3"){
        document.getElementById('pro_btn').setAttribute('disabled', true);   
        document.getElementById('pro_btn').innerHTML ='Current Plan';           
    }
</script>


